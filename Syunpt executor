local function makeDraggable(g, dragBar)
    local dragging = false
    local dragStart, startPos = nil, nil
    local userInputService = game:GetService("UserInputService")
    
    local function inputBegan(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
            dragging = true
            dragStart = input.Position
            startPos = g.Position
            input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then dragging = false end
            end)
        end
    end
    local function inputChanged(input)
        if dragging then
            local delta = input.Position - dragStart
            g.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
        end
    end
    dragBar.InputBegan:Connect(inputBegan)
    dragBar.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
            inputChanged(input)
        end
    end)
    userInputService.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
            inputChanged(input)
        end
    end)
end

makeDraggable(frame, titleBar)
makeDraggable(floatBtn, floatBtn)

function fadeIn(obj, to, time)
    obj.Visible = true
    obj.BackgroundTransparency = 1
    TweenService:Create(obj, TweenInfo.new(time, Enum.EasingStyle.Quad), {BackgroundTransparency = to or 0}):Play()
end
function fadeOut(obj, to, time)
    TweenService:Create(obj, TweenInfo.new(time, Enum.EasingStyle.Quad), {BackgroundTransparency = to or 1}):Play()
    task.wait(time)
    obj.Visible = false
end

function fadeInAll(t, time)
    t.Visible = true
    for _,v in ipairs(t:GetDescendants()) do
        if v:IsA("Frame") or v:IsA("TextButton") or v:IsA("TextLabel") or v:IsA("TextBox") then
            v.BackgroundTransparency = 1
            TweenService:Create(v, TweenInfo.new(time, Enum.EasingStyle.Quad), {BackgroundTransparency = v == inputBox and 1 or (v.BackgroundTransparency or 0)}):Play()
        end
        if v:IsA("TextLabel") or v:IsA("TextBox") or v:IsA("TextButton") then
            v.TextTransparency = 1
            TweenService:Create(v, TweenInfo.new(time, Enum.EasingStyle.Quad), {TextTransparency = v == inputBox and 0 or (v.TextTransparency or 0)}):Play()
        end
    end
    TweenService:Create(t, TweenInfo.new(time, Enum.EasingStyle.Quad), {BackgroundTransparency = 0}):Play()
end

function fadeOutAll(t, time)
    for _,v in ipairs(t:GetDescendants()) do
        if v:IsA("Frame") or v:IsA("TextButton") or v:IsA("TextLabel") or v:IsA("TextBox") then
            TweenService:Create(v, TweenInfo.new(time, Enum.EasingStyle.Quad), {BackgroundTransparency = 1}):Play()
        end
        if v:IsA("TextLabel") or v:IsA("TextBox") or v:IsA("TextButton") then
            TweenService:Create(v, TweenInfo.new(time, Enum.EasingStyle.Quad), {TextTransparency = 1}):Play()
        end
    end
    TweenService:Create(t, TweenInfo.new(time, Enum.EasingStyle.Quad), {BackgroundTransparency = 1}):Play()
    task.wait(time)
    t.Visible = false
end

closeBtn.MouseButton1Click:Connect(function()
    fadeOutAll(frame, 0.22)
    fadeOut(floatBtn, 1, 0.25)
end)
clearBtn.MouseButton1Click:Connect(function()
    inputBox.Text = ""
end)
execBtn.MouseButton1Click:Connect(function()
    local code = inputBox.Text
    print("[Syunpt Executor内]:\n" .. code)
end)
miniBtn.MouseButton1Click:Connect(function()
    fadeOutAll(frame, 0.22)
    wait(0.24)
    fadeIn(floatBtn, 0, 0.21)
end)

-- 悬浮球点击和拖动判定
local floatingDrag = false
local lastPos = nil
floatBtn.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        floatingDrag = true
        lastPos = input.Position
    end
end)
floatBtn.InputEnded:Connect(function(input)
    if floatingDrag and lastPos and ((input.Position - lastPos).magnitude < 10) then
        fadeOut(floatBtn, 1, 0.22)
        wait(0.22)
        fadeInAll(frame, 0.21)
    end
    floatingDrag = false
end)

-- 启动时主界面显示，悬浮球隐藏
fadeInAll(frame, 0.3)
floatBtn.Visible = false
